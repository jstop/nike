      <div id="header">
        <div id="logo"><a href="/"><%= image_tag 'c3p-logo.png' %></a></div>
        <div id="title"><h2>LEADERBOARD</h2></div>
      </div>
      <div class="clearboth"></div>

<div id="scoreboard">
<table width="99%" border="0" cellspacing="0" cellpadding="0">
<tbody>
    <% @best_times[0..4].each_with_index do |best_time, index| %>
            <tr>
              <th scope="col" align="center" valign="middle" width="144"><%= index+1 %></th>
              <th scope="col" align="center" valign="middle" width="190">
              </th>
              <th scope="col" align="left" valign="middle" width="1274">
                <%= "#{best_time.first} #{best_time.last}" %></th>
              <th scope="col" align="center" valign="middle" width="132"> 
                <%= "#{best_time.minutes}:#{sprintf '%02d', best_time.seconds}" if best_time.seconds %></th>
            </tr>
    <% end %>
</tbody>
</table>
</div> <!-- End Slider -->
